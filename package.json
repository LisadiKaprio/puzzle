{
  "name": "puzzle",
  "version": "1.10.3",
  "description": "This is a multiplayer puzzle game running in the browser. See a live version at [jigsaw.hyottoko.club].",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zutatensuppe/puzzle.git"
  },
  "author": "Zutatensuppe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Zutatensuppe/puzzle/issues"
  },
  "homepage": "https://github.com/Zutatensuppe/puzzle#readme",
  "type": "module",
  "scripts": {
    "server": "nodemon --watch build --max-old-space-size=256 -e js build/server/main.js",
    "dev-services": "docker-compose up",
    "dev-frontend": "vite",
    "dev-backend": "nodemon -x \"node --experimental-specifier-resolution=node --loader ts-node/esm\" -w src/server -w src/common src/server/main.ts",
    "lint": "eslint src && stylelint \"src/**/*.scss\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build:server": "rollup -c rollup.server.config.js",
    "build:frontend": "vite build --config vite.config.build.js",
    "build": "npm run build:server && npm run build:frontend"
  },
  "dependencies": {
    "@ckpack/vue-color": "^1.3.0",
    "@mdi/font": "^7.1.96",
    "async-mutex": "^0.3.2",
    "cookie-parser": "^1.4.6",
    "exif": "^0.6.0",
    "express": "^4.17.3",
    "mitt": "^3.0.0",
    "multer": "^1.4.4",
    "pg": "^8.7.3",
    "probe-image-size": "^7.2.3",
    "request": "^2.88.2",
    "sharp": "^0.30.2",
    "vue": "^3.2.31",
    "vue-router": "^4.0.13",
    "vuetify": "^3.0.5",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/exif": "^0.6.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/pg": "^8.6.5",
    "@types/probe-image-size": "^7.0.1",
    "@types/request": "^2.48.8",
    "@types/sharp": "^0.29.5",
    "@types/ws": "^8.5.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.10.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.3.1",
    "rollup": "^2.70.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.50.1",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  }
}
